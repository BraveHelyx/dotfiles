# Usually at ~/.zenviron

# Source the alias file first
## Source the aliases
if [[ -s "$HOME/.zalias" ]]; then
    source "$HOME/.zalias"
fi

# Configure the prompt
autoload -Uz promptinit
promptinit
prompt spaceship

# Enable autocorrections for zsh
ENABLE_CORRECTION="true"

# Configuration for Go
## Add golang's 'go' executable to path
[[ ":$PATH:" != *":/usr/local/go/bin:"* ]] && 
PATH=$PATH:/usr/local/go/bin

## Add golang's bin directory to path
export GOPATH=$(go env GOPATH)
[[ ":$PATH:" != *":$GOPATH/bin:"* ]] && 
PATH=$PATH:$GOPATH/bin

# Configuration for Virtualenv
[[ ":$PATH:" != *":$HOME/.local/bin"* ]] &&
PATH=$PATH:$HOME/.local/bin

## Configure fzf
export FZF_DEFAULT_OPS="--extended"

## Configure virtualenvwrapper
source /home/noone/.local/bin/virtualenvwrapper.sh

## Macros for armory
export ARMORY_HOME=$HOME/.armory

disarmory() {
    cat $ARMORY_HOME/settings.ini | grep "base_path"
}

charmory() {
    if [[ $# -eq 1 ]]; then
        sed -i 's@base_path =.*@base_path = '"${HOME}/Documents/bounty/$1"'@' $ARMORY_HOME/settings.ini
    fi
}
