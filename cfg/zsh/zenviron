# Usually at ~/.zenviron

# Source the alias file first
## Source the aliases
if [[ -s "$HOME/.zalias" ]]; then
    source "$HOME/.zalias"
fi

# Configure the prompt
autoload -Uz promptinit
promptinit
prompt paradox

# Enable autocorrections for zsh
ENABLE_CORRECTION="true"

# Configuration for Go
## Add golang's 'go' executable to path
[[ ":$PATH:" != *":/usr/local/go/bin:"* ]] && 
PATH=$PATH:/usr/local/go/bin

## Add golang's bin directory to path
export GOPATH=$(go env GOPATH)
[[ ":$PATH:" != *":$GOPATH/bin:"* ]] && 
PATH=$PATH:$GOPATH/bin

# Configuration for Virtualenv
[[ ":$PATH:" != *":$HOME/.local/bin"* ]] &&
PATH=$PATH:$HOME/.local/bin

## Configure fzf
export FZF_DEFAULT_OPS="--extended"

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/home/noone/sdks/google-cloud-sdk/path.zsh.inc' ]; then
    . '/home/noone/sdks/google-cloud-sdk/path.zsh.inc'
fi

# The next line enables shell command completion for gcloud.
if [ -f '/home/noone/sdks/google-cloud-sdk/completion.zsh.inc' ]; then
    . '/home/noone/sdks/google-cloud-sdk/completion.zsh.inc'
fi
